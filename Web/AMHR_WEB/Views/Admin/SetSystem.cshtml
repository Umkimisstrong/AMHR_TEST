@model Contract.CodeContract
@{
    ViewBag.Title = "SetSystem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Main layout-->
<main style="padding-left:50px; width:90%;">

    <div class="row border-bottom" style="margin-top:20px;padding-bottom:20px;" id="SearchBox">
        <div style="margin-top: 10px; margin-bottom:10px;">
            <span class="badge bg-primary">Search</span>
        </div>
        <div class="col-md-3">
            <label for="Sys_Code_ID" class="form-label" style="font-size:15px; font-weight:bold; color:dimgrey;">시스템 코드</label>
            <input type="text" class="form-control" placeholder="text" id="Sys_Code_ID">
        </div>
        <div class="col-md-3">
            <label for="Div_Code_ID" class="form-label" style="font-size:15px; font-weight:bold; color:dimgrey;">분류 코드</label>
            <input type="text" class="form-control" placeholder="text" id="Div_Code_ID">
        </div>
        <div class="col-md-3">
            <label for="Code_ID" class="form-label" style="font-size:15px; font-weight:bold; color:dimgrey;">코드</label>
            <input type="text" class="form-control" placeholder="text" id="Code_ID">
        </div>
        <div class="col-md-3">
            <label for="Code_NM" class="form-label" style="font-size:15px; font-weight:bold; color:dimgrey;">코드명</label>
            <input type="text" class="form-control" placeholder="text" id="Code_NM">
        </div>

    </div>
    <div class="row" style="text-align:right; margin-top:10px;">
        <div style="padding-right:0;">
            <button type="button" class="btn btn-outline-primary btn-sm">Click for Search</button>
            <button type="button" class="btn btn-outline-primary btn-sm">Refresh Condition</button>
        </div>
    </div>




    <div class="row" style="margin-top:30px;" id="SearchList">
        <div style="margin-top: 10px; margin-bottom:10px;">
            <span class="badge bg-primary">List</span>
        </div>
        <div style="padding-right:0;">
            <table class="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">코드명</th>
                        <th scope="col">시스템 코드</th>
                        <th scope="col">분류코드</th>
                        <th scope="col">코드</th>
                        <th scope="col">설명</th>
                        <th scope="col">사용여부</th>
                        <th scope="col">정렬순서</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CodeList != null && Model.CodeList.Count > 0)
                    {
                        foreach (Entity.CodeEntity entity in Model.CodeList)
                        {
                            <tr>
                                <td>@entity.CODE_NM</td>
                                <td>@entity.SYS_CODE_ID</td>
                                <td>@entity.DIV_CODE_ID</td>
                                <td>@entity.CODE_ID</td>
                                <td>@entity.CODE_DESCRIPTION</td>
                                <td>@entity.USE_YN</td>
                                <td>@entity.SORT_ORDER</td>
                            </tr>    
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">No Data</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>

    <div class="row">
        <div style="margin-top:30px;">
            <ul class="pagination" style="align-items:center; justify-content:center;">
                @{
                    int PAGE_COUNT = int.Parse(ViewBag.PAGE_COUNT.ToString());
                    int NOW_PAGE_NUMBER = int.Parse(ViewBag.NOW_PAGE_NUMBER.ToString());
                    string strDisabledClass = "";
                    string strActiveClass = "";
                    for (int i = 0; i < PAGE_COUNT; i++)
                    {
                        if (i == 0 && PAGE_COUNT != 1)
                        {
                            <li class="page-item @{ strDisabledClass = NOW_PAGE_NUMBER == i ? "disabled" : ""; } @strDisabledClass">
                                <a class="page-link" href="#">&laquo;</a>
                            </li>
                        }
                        else if (i > 0 && i < PAGE_COUNT)
                        {
                            <li class="page-item @{ strActiveClass = NOW_PAGE_NUMBER == i ? "active" : ""; } @strActiveClass">
                                <a class="page-link" href="#">@i</a>
                            </li>
                        }
                        else if (i == PAGE_COUNT - 1 && PAGE_COUNT != 1)
                        {
                            <li class="page-item active">
                                <a class="page-link" href="#">@i</a>
                            </li>
                            <li class="page-item @{ strDisabledClass = NOW_PAGE_NUMBER == i ? "disabled" : ""; } @strDisabledClass">
                                <a class="page-link" href="#">&raquo;</a>
                            </li>
                        }

                    }
                }
                @*<li class="page-item disabled">
            <a class="page-link" href="#">&laquo;</a>
        </li>
        <li class="page-item active">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">4</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">5</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">&raquo;</a>
        </li>*@
            </ul>
        </div>
    </div>

</main>
<!--Main layout-->
